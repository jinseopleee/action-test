{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "types": ["node"],
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,

    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "vite.config.ts"]
}
